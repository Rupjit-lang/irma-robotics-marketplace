# Database Configuration
# Production runtime URL - use transaction pooler for better performance
DATABASE_URL="postgresql://user:password@db.supabasehost.com:6543/postgres?sslmode=require&pgbouncer=true&connection_limit=1"

# CI/Migration URL - use session pooler for migrations
PRISMA_MIGRATE_URL="postgresql://user:password@db.supabasehost.com:5432/postgres?sslmode=require"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Razorpay Configuration (Sandbox)
RAZORPAY_KEY_ID="rzp_test_your_key_id"
RAZORPAY_KEY_SECRET="your_secret_key"
NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_test_your_key_id"

# Razorpay Route Configuration
ROUTE_WEBHOOK_SECRET="your_route_webhook_secret"

# Application Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE="10MB"
NEXT_PUBLIC_ALLOWED_FILE_TYPES="text/csv,application/vnd.ms-excel"

# Email Configuration (if using custom email service)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-password"

# Environment
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"