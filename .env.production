# IRMA Marketplace - Production Environment Variables
# Copy these to Vercel Dashboard → Project Settings → Environment Variables

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Required: Supabase Postgres connection string
DATABASE_URL="postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres"

# =============================================================================
# SUPABASE AUTHENTICATION
# =============================================================================
# Required: Get from Supabase Dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL="https://[project-ref].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
SUPABASE_SERVICE_ROLE_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# =============================================================================
# PAYMENT PROCESSING (RAZORPAY)
# =============================================================================
# Required: Get from Razorpay Dashboard
NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_test_xxxxxxxxxxxxx"
RAZORPAY_KEY_SECRET="xxxxxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# APP CONFIGURATION
# =============================================================================
# Required: Your Vercel deployment URL
NEXT_PUBLIC_APP_URL="https://your-app-name.vercel.app"

# Required: Random secret for NextAuth
NEXTAUTH_SECRET="your-super-secret-random-string-here"

# Optional: Analytics and monitoring
NEXT_PUBLIC_GA_TRACKING_ID=""
SENTRY_DSN=""

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
NEXT_PUBLIC_ENABLE_PAYMENTS="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_DEBUG="false"

# =============================================================================
# DEPLOYMENT INFO
# =============================================================================
VERCEL_ENV="production"
NODE_ENV="production"